{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@root": ["."],
      "@root/*": ["./*"],
      "@schema": ["schema"],
      "@schema/*": ["schema/*"],
      "@modules": ["schema/modules"],
      "@modules/*": ["schema/modules/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".history", ".git"]
}
