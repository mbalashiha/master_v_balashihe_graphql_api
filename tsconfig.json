{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    // "lib": ["dom", "dom.iterable", "esnext"],
    "lib": ["esnext"],
    "allowJs": true,
    "noEmit": false,
    "noEmitOnError": false,
    "sourceMap": true,
    // "outFile": "./",                       /* Concatenate and emit output to single file. */
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@root": ["."],
      "@root/*": ["./*"]
    },
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.tsx", "src/zzz_type-defs.tsexcluded"],
  "exclude": ["node_modules"]
}
